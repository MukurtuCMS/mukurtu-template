{
    "name": "mukurtu/mukurtu-template",
    "description": "Project template for Mukurtu CMS v4+",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://mukurtu.org",
    "support": {
        "docs": "https://mukurtudocs.readthedocs.io"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        "masonry": {
            "type": "package",
            "package": {
                "name": "mukurtu/masonry",
                "version": "4.2.2",
                "dist": {
                    "url": "https://github.com/desandro/masonry/archive/v4.2.2.zip",
                    "type": "zip"
                },
                "type": "drupal-library"
            }
        },
        "colorbox": {
            "type": "package",
            "package": {
                "name": "mukurtu/colorbox",
                "version": "1.6.4",
                "dist": {
                    "url": "https://github.com/jackmoore/colorbox/archive/master.zip",
                    "type": "zip"
                },
                "type": "drupal-library"
            }
        }
    },
    "require": {
        "mukurtu/mukurtu-cms": "dev-main"
    },
    "require-dev": {
        "drupal/core-dev": "*",
        "drupal/devel": "*",
        "drupal/devel_php": "*",
        "phpspec/prophecy-phpunit": "^2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/console-extend-plugin": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/profiles/custom/{$name}": ["type:drupal-custom-profile"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"],
            "recipes/{$name}": ["type:drupal-recipe"]
        }
    }
}
